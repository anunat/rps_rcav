<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="btn-group btn-group-justified">
        <a href="/rock" class = "btn btn-block btn-primary">Play Rock</a>
        <a href="/paper" class = "btn btn-block btn-info">Play Paper</a>
        <a href="/scissors" class = "btn btn-block btn-primary">Play Scissors</a>
      </div>

    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Scissors</h3>
        </div>
        <div class="panel-body">
          <img class = "img-responsive" src="assets/images/scissors.png">
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><%= @computer_move.capitalize %></h3>
        </div>

        <% if @computer_move == "rock" %>
        <div class="panel-body">
          <img class = "img-responsive" src="assets/images/rock.png">
        </div>
        <% elsif @computer_move == "paper" %>
        <div class="panel-body">
          <img class = "img-responsive" src="assets/images/paper.png">
        </div>
        <% else %>
        <div class="panel-body">
          <img class = "img-responsive" src="assets/images/scissors.png">
        </div>
        <% end %>


      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class = "well text-center">
        <% if @result  == "You win!" %>
        <h1>
          <span class = "label label-success"><%= @result %></span>
        </h1>
        <%elsif @result == "You lost!"%>
        <h1>
          <span class = "label label-danger"><%= @result %></span>
        </h1>
        <%else%>
        <h1>
          <span class = "label label-warning"><%= @result %></span>
        </h1>
        <%end%>
      </div>
    </div>
  </div>
</div>




